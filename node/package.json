{
  "name": "node",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "jade": "~1.11.0",
    "morgan": "~1.9.0",
    "request": "^2.88.0",
    "socket.io": "^2.2.0",
    "webpack": "^4.29.6",
    "webpack-dev-middleware": "^3.6.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.10"
  },
  "nodemonConfig": {
    "delay": 1000,
    "ext": "js,ts,json,css,svg,png,html,font",
    "watch": [
      ".",
      "../webapp/src"
    ],
    "ignore": [
      "public",
      "public/*"
    ],
    "verbose": true,
    "exec": "(cd ../webapp; npm install; npm run prod);",
    "events": {
      "restart": "(cd ../webapp; npm install; npm run prod)"
    }
  }
}
